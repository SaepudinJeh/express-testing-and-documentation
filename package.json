{
  "name": "test-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index",
    "test": "mocha tests/**/*.spec.ts -r @swc/register -extension ts",
    "watch-test": "nodemon --watch \"tests/**/*.spec.ts\" --exec \"npm test\""

  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.42",
    "@swc/register": "^0.1.10",
    "@tsconfig/node16": "^1.0.3",
    "@tsconfig/node18": "^1.0.1",
    "@types/chai": "^4.3.11",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.10",
    "@types/sinon": "^17.0.2",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "chai": "^4.3.10",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.36.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0"
  }
}
